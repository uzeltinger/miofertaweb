<?xml version="1.0" encoding="utf-8"?>
<metadata>
	<layout title="COM_J_BUSINESSDIRECTORY_MENUITEM_EVENTS">
		<message>COM_J_BUSINESSDIRECTORY_MENUITEM_EVENT_INFO</message>
	</layout>

	<fields name="request">
		<fieldset name="request" addfieldpath="/administrator/components/com_jbusinessdirectory/models/fields">
			<field
				name="menuCategoryId"
				type="businesscategories"
				multiple="false"
				size="10"
				default=""
				category_type="3"
				label="Category"
				description="Select category" >
			</field>

			<field
				name="typeSearch"
				type="eventypes"
				multiple="false"
				size="10"
				default=""
				category_type="3"
				label="Type"
				description="Select Type" >
			</field>
			
			<field
				name="citySearch"
				type="businesscities"
				multiple="false"
				size="10"
				default=""
				label="City"
				description="Select city" >
			</field>	
			
			<field
				name="regionSearch"
				type="text"
				label="Region"
				description="Enter the name of the region" />
		
			<field
				name="days"
				type="text"
				default="0"
				label="Days"
				description="Display the events from today plus the number of days entered" />
		
			<field
				name="view_mode"
				type="radio"
				class="btn-group"
				default=""
				label="View style"
				description="Set the view style for the listings display">
				<option
					value="">Default</option>
				<option
					value="0">List</option>
				<option
					value="1">Grid</option>
			</field>
			
			<field
				name="list_layout"
				type="list"
				class="btn-group"
				default=""
				label="List view style"
				description="Set the view style for the listings display">
				<option
					value="">Select style</option>
				<option
					value="1">Style 1</option>
			</field>
			
			<field
				name="grid_layout"
				type="list"
				class="btn-group"
				default=""
				label="Grid view style"
				description="Set the view style for the listings display">
				<option
					value="">Select mode</option>
				<option
					value="1">Style 1</option>
			</field>
		
			<field name="resetSearch" type="radio" class="btn-group btn-group-yesno" default="1" label="Reset search" description="Reset search when the menu item is accessed">
				  <option value="0">No</option>
				  <option value="1">Yes</option>
				</field>
		</fieldset>
	</fields>
</metadata>
