<?xml version="1.0" encoding="utf-8"?>
<metadata>
	<layout title="COM_J_BUSINESSDIRECTORY_MENUITEM_BUSINESS_LISTINGS">
		<message>
			<![CDATA[COM_J_BUSINESSDIRECTORY_MENUITEM_BUSINESS_LISTINGS_INFO]]>
		</message>
	</layout>

	<!-- Add fields to the request variables for the layout. -->
	<fields name="request">
		<fieldset name="request" addfieldpath="/administrator/components/com_jbusinessdirectory/models/fields">
			<field
					name="menuCategoryId"
					type="businesscategories"
					multiple="false"
					size="10"
					default=""
					label="Category"
					category_type="1"
					description="Select category" >
				</field>
				
				<field
					name="typeSearch"
					type="businesstypes"
					multiple="false"
					size="10"
					default=""
					label="Type"
					description="Select type">
				</field>
				
				<field
					name="citySearch"
					type="businesscities"
					multiple="false"
					size="10"
					default=""
					label="City"
					description="Select city" >
				</field>

			<field
					name="regionSearch"
					type="businessregions"
					multiple="false"
					size="10"
					default=""
					label="Region"
					description="Select region" >
			</field>
					
			<field
					name="countrySearch"
					type="businesscountries"
					multiple="false"
					size="10"
					default=""
					label="Country"
					description="Select country" >
				</field>
			
				<field name="featured" type="radio" class="btn-group btn-group-yesno" default="0" label="Only featured" description="Only featured listing will be shown">
				  <option value="0">No</option>
				  <option value="1">Yes</option>
				</field>
				
				<field
					name="geolocation"
					type="radio"
					class="btn-group"
					default="0"
					label="User geo location"
					description="Display businesses based on user geo location - this will do a refresh of the page and the coordinates will be added on current URL">
					<option
						value="1">JYES</option>
					<option
						value="0">JNO</option>
				</field>

				<field
					name="radius"
					type="text"
					default="100"
					label="Geo location radius"
					description="Show the business listing based on radius"/> 
			
				<field name="resetSearch" type="radio" class="btn-group btn-group-yesno" default="1" label="Reset search" description="Reset search when the menu item is accessed">
				  <option value="0">No</option>
				  <option value="1">Yes</option>
				</field>
				
				<field
					name="view_mode"
					type="radio"
					class="btn-group"
					default=""
					label="View style"
					description="Set the view style for the listings display">
					<option
						value="">Default</option>
					<option
						value="0">List</option>
					<option
						value="1">Grid</option>
				</field>
				
				<field
					name="list_layout"
					type="list"
					class="btn-group"
					default=""
					label="List view style"
					description="Set the view style for the listings display">
					<option
						value="">Select style</option>
					<option
						value="1">Style 1</option>
					<option
						value="2">Style 2</option>
					<option
						value="3">Style 3</option>
					<option
						value="4">Style 4</option>
					<option
						value="5">Style 5</option>
					<option
						value="6">Style 6</option>
					<option
						value="7">Style 7</option>
				</field>
				
				<field
					name="grid_layout"
					type="list"
					class="btn-group"
					default=""
					label="Grid view style"
					description="Set the view style for the listings display">
					<option
						value="">Select mode</option>
					<option
						value="1">Style 1</option>
					<option
						value="2">Style 2</option>
				</field>
		</fieldset>
	</fields>
</metadata>
	